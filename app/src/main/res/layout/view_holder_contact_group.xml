<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/box"
    android:layout_marginHorizontal="@dimen/margin_small"
    android:layout_marginVertical="@dimen/margin_card_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_card_medium_2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContactAlphabet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_medium"
            android:text="Favorites(2)"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/margin_medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/tvContactAlphabet"
            android:id="@+id/rvContactList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginHorizontal="@dimen/margin_card_medium"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>